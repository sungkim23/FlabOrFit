<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tech.sungkim.flaborfit.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2ca5f5"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/weightBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/weight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="30%"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:paddingRight="5dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Weight lifting"
            android:id="@+id/textView2"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Do you even lift?"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="3dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10 sets"
            android:id="@+id/textView4"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#20000000"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_weight="1"
        android:id="@+id/yogaBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lotus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="15%"
            android:id="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:paddingRight="5dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yoga"
            android:id="@+id/textView6"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Namaste"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="3dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1 Hour"
            android:id="@+id/textView8"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#20000000"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/cardioBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/heart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="22%"
            android:id="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:paddingRight="5dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cardio"
            android:id="@+id/textView10"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Run like crazy"
            android:id="@+id/textView11"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="3dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5 miles"
            android:id="@+id/textView12"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#20000000"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>
